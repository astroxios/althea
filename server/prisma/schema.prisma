datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique @db.VarChar(50)
  username String @unique @db.VarChar(50)
  password String @db.VarChar(200)
  roles Role[]
}

model Role {
  id Int @id @default(autoincrement())
  name String @unique
  permissions Permission[]
  users User[]
}

model Permission {
  id Int @id @default(autoincrement())
  name String @unique
  roles Role[]
}
