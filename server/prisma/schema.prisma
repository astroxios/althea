datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String   @unique
  password String
  created  DateTime @default(now())
  updated  DateTime @updatedAt
  widgets  Widget[]

  @@map("users")
}

model Widget {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      WidgetType @relation(fields: [typeId], references: [id])
  userId    Int
  typeId    Int
  is_active Boolean    @default(true)
  created   DateTime   @default(now())
  updated   DateTime   @updatedAt

  @@map("widgets")
}

model WidgetType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  widgets     Widget[]

  @@map("widget_types")
}

// Initial widget types
enum WidgetTypeNames {
  SCHEDULES
  POLLS
  SHOUTOUTS
  FAN_ART
  MERCHANDISE
  CONTESTS
  HIGHLIGHTS
  RANKINGS
}
