datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Widget {
  id        Int        @id @default(autoincrement())
  type      WidgetType @relation(fields: [typeId], references: [id])
  typeId    Int
  name      String
  is_active Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("widgets")
}

model WidgetType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  widgets     Widget[]

  @@map("widget_types")
}

// Initial widget types
enum WidgetTypeNames {
  SCHEDULES
  POLLS
  SHOUTOUTS
  FAN_ART
  MERCHANDISE
  CONTESTS
  HIGHLIGHTS
  RANKINGS
}
